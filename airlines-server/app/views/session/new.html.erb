<%= form_tag login_path do %>
  <% if flash[:error].present? %>
    <div id="error_explanation">
      <h2><%= flash[:error] %></h2>
    </div>
  <% end %>

  <div class="field">
    <%= label_tag :email %>
    <%= email_field_tag :email %>
  </div>

  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>

  <div class="actions">
    <%= submit_tag "Log In" %>
  </div>
<% end %>
