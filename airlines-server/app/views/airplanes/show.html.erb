<h1>Show Airplane</h1>

<header class="plane-header">
    <div class="container">
      <nav>
         <ul>
             <li><a><%= link_to "Planes", airplanes_path %></a></li>
             <li><a><%= link_to "Flights", flights_path %></a></li>
             <li><a><%= link_to "Admin", login_path %></a></li>
           </ul>
         </nav>
       </div>
   </header>

<div class="container">
  <div class="card">
    <h1><%= @airplane.name %></h1>
    <h3><%= @airplane.rows %></h3>
    <!-- Check if current user is an admin. -->
    <!-- If true display edit / delete controls. If false hide-->
    <% if @current_user.present? && @current_user.is_admin %>
      <div class="controls">
        <%= link_to "Edit Airplane", edit_airplane_path(@airplane) %>
        <%= link_to "Delete Airplane", @airplane, :method => 'delete', :data => { :confirm => 'Are you sure?' } %>
      </div>
    <% else %>
        <p>Sign in as an admin to see edit & delete controls</p>
    <% end %>
  </div>
</div>
